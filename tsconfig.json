{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,

    "lib": [
      "ESNext"
    ],
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts",
  ],
  "exclude": [
    "node_modules/**/*.*",
    "test/**/*.*",
    "**/*.spec.ts",
  ],
  "declaration": true,
}
